generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String
  password  String
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  items     Item[]
  
  @@map("users")
}

model Item {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String
  category     String
  location     String
  date         DateTime
  status       String
  imageUrl     String?
  contactName  String
  contactEmail String
  contactPhone String?
  resolved     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  userId       String?  @db.ObjectId
  user         User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("items")
}